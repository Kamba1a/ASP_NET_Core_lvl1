@model OrderDetailsViewModel

    <form method="post" asp-action="OrderCheckout" asp-antiforgery="true">
        <div class="col-sm-6">
            <div class="chose_area">
                <div asp-validation-summary="All"></div>
                <ul class="user_option">
                    <li>
                        <label asp-for="Name"></label>
                        <input asp-for="Name" />
                    </li>
                    <li>
                        <label asp-for="Phone"></label>
                        <input asp-for="Phone" />
                    </li>
                    <li>
                        <label asp-for="Address"></label>
                        <input asp-for="Address" />
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="total_area">
                @{
                    ViewData.TryGetValue("TotalPrice", out object obj);
                    if (obj != null)
                    {
                        decimal totalPrice = (decimal)obj;

                        <ul>
                            @*  <li>Cart Sub Total <span>$59</span></li>
                    <li>Eco Tax <span>$2</span></li>
                    <li>Shipping Cost <span>Free</span></li>*@

                            <li>Total <span>$@totalPrice</span></li>
                        </ul>

                        @*<a class="btn btn-default update" href="">Update</a>*@

                        if (totalPrice > 0)
                        {
                            <input type="submit" class="btn btn-default check_out" value="Оформить заказ" />
                        }
                    }
                }
            </div>
        </div>
    </form>
