@model IEnumerable<CategoryViewModel>

<h2>Category</h2>
<div class="panel-group category-products" id="accordian">
    <!--category-products-->

    @foreach (CategoryViewModel category in Model)
    {
        if (category.childCategories==null || category.childCategories.Count()<1)
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title"><a asp-controller="Catalog" asp-action="Shop" asp-route-categoryId="@category.Id">@category.Name</a></h4>
                </div>
            </div>
        }
        else
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a data-toggle="collapse" data-parent="#accordian" href="#@category.Name.ToLower()">
                            <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                            @category.Name
                        </a>
                    </h4>
                </div>
                <div id="@category.Name.ToLower()" class="panel-collapse collapse">
                    <div class="panel-body">
                        <ul>
                            @foreach (CategoryViewModel childCategory in category.childCategories)
                            {
                                <li><a asp-controller="Catalog" asp-action="Shop" asp-route-categoryId="@childCategory.Id">@childCategory.Name</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    }
</div>